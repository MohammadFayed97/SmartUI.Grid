@inherits BaseComponent
@using Microsoft.AspNetCore.Components.Web

<div class="paging">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-@getAlignment()" style="padding-right: 0;">
            @foreach (PaginationLink link in _links)
            {
                <li class="page-item @(link.Active ? "active" : null) @(link.Enabled ? null : "disabled")">
                    <a class="page-link" href="javascript:void(0)" aria-disabled="@(!link.Enabled)" @onclick=@(async () => await OnPageSelected(link))>@link.Text</a>
                </li>
            }
        </ul>
    </nav>
</div>
<style>
    .paging{
        width : 100% !important;
        overflow : auto;
    }
    .paging::-webkit-scrollbar{
        display : none;
    }
</style>